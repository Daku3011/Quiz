<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/19.0.2"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizclient.controllers.StudentController"
           styleClass="root">

    <VBox spacing="20" alignment="CENTER" maxWidth="400" maxHeight="350" styleClass="card">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Text text="Student Registration" styleClass="title"/>
        <Text text="Enter your details to register" style="-fx-fill: #7f8c8d;"/>

        <VBox spacing="15">
            <VBox spacing="5">
                <Label text="Full Name"/>
                <TextField fx:id="nameField" promptText="e.g. John Doe"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Enrollment Number"/>
                <TextField fx:id="enrollmentField" promptText="e.g. 123456"/>
            </VBox>
        </VBox>

        <Label fx:id="message" textFill="#e74c3c" wrapText="true"/>

        <Button text="Register &amp; Continue" 
                maxWidth="Infinity"
                onAction="#onRegister" 
                styleClass="button"/>
    </VBox>

</StackPane>
