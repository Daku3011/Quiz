<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" xmlns:fx="http://javafx.com/fxml" fx:controller="com.quizclient.controllers.QuizController" styleClass="root">
    <fx:define>
        <ToggleGroup fx:id="choices"/>
    </fx:define>

    <VBox spacing="20" alignment="TOP_CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Join Section -->
        <VBox fx:id="joinSection" spacing="15" maxWidth="600" styleClass="card">
            <Label text="Join Quiz Session" styleClass="subtitle"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="sessionField" promptText="Session ID" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="otpField" promptText="OTP" prefWidth="100"/>
                <Button fx:id="joinBtn" text="Join" onAction="#onJoin" styleClass="button, success"/>
            </HBox>
            <Label fx:id="statusLabel" textFill="#e74c3c"/>
        </VBox>

        <!-- Quiz Section -->
        <VBox fx:id="quizSection" spacing="20" maxWidth="800" styleClass="card" VBox.vgrow="ALWAYS" visible="false" managed="false">
            <HBox alignment="CENTER_LEFT">
                <Label fx:id="qNumber" text="Question -" styleClass="subtitle"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
            
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <Label fx:id="qText" wrapText="true" style="-fx-font-size: 14px; -fx-padding: 10;" />
            </ScrollPane>
            
            <VBox spacing="10">
                <RadioButton fx:id="rA" text="Option A" toggleGroup="$choices"/>
                <RadioButton fx:id="rB" text="Option B" toggleGroup="$choices"/>
                <RadioButton fx:id="rC" text="Option C" toggleGroup="$choices"/>
                <RadioButton fx:id="rD" text="Option D" toggleGroup="$choices"/>
            </VBox>

            <Separator/>

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button fx:id="prevBtn" text="Previous" onAction="#onPrev" styleClass="button, secondary"/>
                <Button fx:id="nextBtn" text="Next" onAction="#onNext" styleClass="button"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="submitBtn" text="Submit Quiz" onAction="#onSubmit" styleClass="button, danger"/>
            </HBox>
        </VBox>

    </VBox>
</ScrollPane>
