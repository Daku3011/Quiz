<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="com.quizclient.controllers.ScoreboardController" styleClass="root">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Live Scoreboard" styleClass="title"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Region prefWidth="10"/>
        <Label text="Session ID:"/>
        <TextField fx:id="sessionIdField" promptText="Enter Session ID" style="-fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#onRefresh" style="-fx-font-size: 14px;"/>
        <Button text="Print" onAction="#onPrint" style="-fx-font-size: 14px;"/>
    </HBox>

    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameCol" text="Student Name" prefWidth="150"/>
            <TableColumn fx:id="enrollCol" text="Enrollment" prefWidth="100"/>
            <TableColumn fx:id="setCol" text="Set" prefWidth="50" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="scoreCol" text="Score" prefWidth="80"/>
            <TableColumn fx:id="timeCol" text="Submitted At" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
