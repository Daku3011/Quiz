<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.quizclient.controllers.FacultyController" style="-fx-padding:12">
  <Label text="Faculty Dashboard" style="-fx-font-size:16; -fx-font-weight:bold"/>
  <TextArea fx:id="syllabusArea" promptText="Paste syllabus here" prefRowCount="8" />
  <HBox spacing="8">
    <Button text="Generate Questions (AI)" onAction="#onGenerate" />
    <Button text="Start Session" onAction="#onStartSession" />
  </HBox>
  <ListView fx:id="questionsList" prefHeight="200" />
  <Label fx:id="sessionInfo" />
</VBox>
