<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" xmlns:fx="http://javafx.com/fxml" fx:controller="com.quizclient.controllers.QuizController" styleClass="root">
    <fx:define>
        <ToggleGroup fx:id="choices"/>
    </fx:define>

    <VBox spacing="30" alignment="TOP_CENTER">
        <padding>
            <Insets top="40" right="20" bottom="40" left="20"/>
        </padding>

        <!-- Join Section -->
        <VBox fx:id="joinSection" spacing="20" maxWidth="500" styleClass="card">
            <Label text="Join Quiz Session" styleClass="title" style="-fx-font-size: 24px;"/>
            <Label text="Enter the session ID provided by your faculty." style="-fx-text-fill: #636e72;"/>
            
            <VBox spacing="15">
                <TextField fx:id="sessionField" promptText="Session ID" styleClass="text-field" prefHeight="40"/>
                <TextField fx:id="otpField" promptText="OTP (if required)" styleClass="text-field" prefHeight="40"/>
                <Button fx:id="joinBtn" text="Join Session" onAction="#onJoin" styleClass="button, success" maxWidth="Infinity" prefHeight="40"/>
            </VBox>
            
            <Label fx:id="statusLabel" styleClass="status-label" wrapText="true"/>
        </VBox>

        <!-- Quiz Section -->
        <VBox fx:id="quizSection" spacing="20" maxWidth="800" styleClass="card" VBox.vgrow="ALWAYS" visible="false" managed="false">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="qNumber" text="Question 1" styleClass="subtitle" style="-fx-text-fill: #2575fc; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Quiz in Progress" style="-fx-text-fill: #b2bec3; -fx-font-size: 12px;"/>
            </HBox>
            
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" minHeight="100">
                <Label fx:id="qText" wrapText="true" style="-fx-font-size: 16px; -fx-padding: 10; -fx-text-fill: #2d3436;" />
            </ScrollPane>
            
            <VBox spacing="12" style="-fx-padding: 10 0;">
                <RadioButton fx:id="rA" text="Option A" toggleGroup="$choices" styleClass="radio-button"/>
                <RadioButton fx:id="rB" text="Option B" toggleGroup="$choices" styleClass="radio-button"/>
                <RadioButton fx:id="rC" text="Option C" toggleGroup="$choices" styleClass="radio-button"/>
                <RadioButton fx:id="rD" text="Option D" toggleGroup="$choices" styleClass="radio-button"/>
            </VBox>

            <Separator/>

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button fx:id="prevBtn" text="Previous" onAction="#onPrev" styleClass="button, secondary"/>
                <Button fx:id="nextBtn" text="Next" onAction="#onNext" styleClass="button"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="submitBtn" text="Submit Quiz" onAction="#onSubmit" styleClass="button, danger"/>
            </HBox>
        </VBox>

    </VBox>
</ScrollPane>
