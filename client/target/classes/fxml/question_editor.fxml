<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<DialogPane xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="500">
    <content>
        <VBox spacing="15">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <VBox spacing="5">
                <Label text="Question Text:" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="qTextArea" prefRowCount="3" wrapText="true"/>
            </VBox>

            <GridPane hgap="10" vgap="10">
                <Label text="Option A:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="optAField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"/>

                <Label text="Option B:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="optBField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"/>

                <Label text="Option C:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="optCField" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS"/>

                <Label text="Option D:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="optDField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.hgrow="ALWAYS"/>
            </GridPane>

            <VBox spacing="5">
                <Label text="Correct Answer:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="correctBox"/>
            </VBox>
        </VBox>
    </content>
</DialogPane>
